<%if session[:user_id]%>

<h1>Modification du potin</h1>

<div class="col-6">
    <%= form_for @gossip do |f|%>
        <div>
            <label for="title">titre du potin</label>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
            <label for="content">Contenu du potin</label>
            <%= f.text_area :content, class: 'form-control' %>
        </div>
        <input type="submit" class="btn btn-primary" value="Modifier le potin">
    <% end %>
</div>
<% else %>
<h2>connectez vous pour editer un potin</h2>
<% end %>