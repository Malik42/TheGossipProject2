<h1>Modification de la ville</h1>

<div class="col-6">
    <%= form_for @city do |f|%>
        <div>
            <label for="title">Nom de la ville</label>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <label for="content">code postal</label>
            <%= f.text_field :zip_code, class: 'form-control' %>
        </div>
        <%if session[:user_id]%>
        <input type="submit" class="btn btn-primary" value="Modifier la ville">
        <% else %>
        <h2>connectez vous pour cree un potin</h2>
        <% end %>
    <% end %>
</div>
